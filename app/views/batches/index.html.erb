<div id='content-heading'>
        <h1>Listing Batches</h1>
</div>
<p class="notice"><%= notice %></p>
<div id='content'>
    <div id="content-body">
        <div id="description-bar">
            <div class="cell-data">Code</div>
            <div class="cell-data">Total Seats</div>
            <div class="cell-data">Seats Remaining</div>
            <div class="cell-data">Tutor</div>
            <div class="cell-data">Course</div>
            <div class="cell-data">Actions</div>
        </div>
        <% @batches.each do |batch| %>
            <div class="data-bar">
                <div class="cell-data">
                    <%= batch.code %>
                </div>
                <div class="cell-data">
                    <%= batch.total_seats %>
                </div>
                <div class="cell-data">
                    <%= batch.seats_available %>
                </div>
                <div class="cell-data">
                    <%= batch.tutorName%>
                </div>
                <div class="cell-data">
                    <%= batch.courseCode%>
                </div>
                <div class="actions">
                    <div class="action-cell">
                        <p><%= edit_pill_button_link_to 'Edit', edit_batch_path(batch) %></p>
                        <p><%= negative_trash_pill_button_link_to 'Delete', batch, :confirm => 'Are you sure?', :method => :delete %></p>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
    <div id="action-bar">
        <%= add_pill_button_link_to 'Add New Batch', new_batch_path %>
    </div>
</div>
