<div id='content-heading'>
    <h1>Listing sessions</h1>
</div>
<p class="notice"><%= notice %></p>
<div id='content'>
    <div id="content-body">
        <div id="description-bar">
            <div class="cell-data">Description</div>
            <div class="cell-data"> Actions</div>
        </div>
        <% @sessions.each do |session| %>
            <div class="data-bar">
                <div class="cell-data">
                    <%= session.description %>
                </div>
                <div class="actions">
                    <div class="action-cell">
                        <p><%= log_pill_button_link_to 'Show', session %></p>

                        <p><%= edit_pill_button_link_to 'Edit', edit_session_path(session) %></p>

                        <p><%= negative_trash_pill_button_link_to 'Delete',session, :confirm => 'Are you sure?', :method => :delete %></p>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
    <div id="action-bar">
        <%= add_pill_button_link_to 'Add New', new_session_path %>
    </div>
</div>