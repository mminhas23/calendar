<div id='content-heading'>
        <h1>Listing Users</h1>
</div>
<p class="notice"><%= notice %></p>
<div id='content'>
    <div id="content-body">
        <div id="description-bar">
            <div class="cell-data">Email</div>
            <div class="cell-data">Role</div>
            <div class="cell-data"> Actions</div>
        </div>
        <% @users.each do |user| %>
            <div class="data-bar">
                <div class="cell-data">
                    <%= user.email %>
                </div>
                <div class="cell-data">
                    <%= user.role %>
                </div>
                <div class="actions">
                    <div class="action-cell">
                        <p><%= log_pill_button_link_to 'Show', user_path(user.id) %></p>
                        <p><%= edit_pill_button_link_to 'Edit', edit_user_path(user.id) %></p>
                        <p><%= negative_trash_pill_button_link_to 'Delete', user, :confirm => 'Are you sure?', :method => :delete %></p>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
    <div id="action-bar">
        <%= add_pill_button_link_to 'Add New User', new_user_path %>
    </div>
</div>