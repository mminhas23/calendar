<div id='content-heading'>
        <h1>Listing Students</h1>
</div>
<p class="notice"><%= notice %></p>
<div id='content'>
    <div id="content-body">
        <div id="description-bar">
            <div class="cell-data">Name</div>
            <div class="cell-data">DOB</div>
            <div class="cell-data">Adress</div>
            <div class="cell-data">Email</div>
            <div class="cell-data">Courses</div>
            <div class="cell-data">Batches</div>
            <div class="cell-data">Actions</div>
        </div>
        <% @students.each do |student| %>
            <div class="data-bar">
                <div class="cell-data">
                    <%= student.name %>
                </div>
                <div class="cell-data">
                    <%= student.dob %>
                </div>
                <div class="cell-data">
                    <%= student.address %>
                </div>
                <div class="cell-data">
                    <%= student.email %>
                </div>
                <div class="cell-data">
                    <% student.courses.each do |course| %>
                        <%= course.course_code%><br/>
                    <% end %>
                </div>
                <div class="cell-data">
                    <% student.batches.each do |batch| %>
                        <%= batch.code%><br/>
                    <% end %>
                </div>
                <div class="actions">
                        <p><%= add_pill_button_link_to 'Batch', assign_student_path(student)%></p>
                        <p><%= log_pill_button_link_to 'Show', student %></p>
                        <p><%= edit_pill_button_link_to 'Edit', edit_student_path(student) %></p>
                        <p><%= negative_trash_pill_button_link_to 'Delete', student, :confirm => 'Are you sure?', :method => :delete %></p>
                </div>
            </div>
        <% end %>
    </div>
    <div id="action-bar">
        <%= add_pill_button_link_to 'Add New Student', new_student_path %>
    </div>
</div>
